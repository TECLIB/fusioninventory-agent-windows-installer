declare arch=''
declare arch_label=''
declare -a -r archs=(x64 x86)
declare -a -r arch_labels=(64bit 32bit)

declare -r strawberry_version='5.22.2.1'
declare -r strawberry_release='May 2016'
declare -r strawberry_path="../Strawberry/${strawberry_version}"

declare -r strawberry_arch_path='${strawberry_path}/${arch}'
declare -r strawberry_arch_url='http://strawberryperl.com/download/${strawberry_version}/strawberry-perl-${strawberry_version}-${arch_label}-portable.zip'

declare -r strawberry_pepfia_branch='2.3.x'
declare -r strawberry_pepfia_build_id='1'
declare -r strawberry_pepfia_path="${strawberry_path%/${strawberry_version}}"
declare -r strawberry_pepfia_file="strawberry-perl-${strawberry_version}-all-pepfia-${strawberry_pepfia_branch}-${strawberry_pepfia_build_id}.tar.xz"
declare -r strawberry_pepfia_par_file='strawberry-perl-${strawberry_version}-${arch}-par-pepfia-${strawberry_pepfia_branch}-${strawberry_pepfia_build_id}.zip'
declare -r strawberry_pepfia_par_template_file='fusioninventory-agent-par-template.pl'
declare -r strawberry_pepfia_url='https://sourceforge.net/projects/fiawi/files/strawberry-perl-packages'

declare -i -r maximum_commit_length=10

# Set fusinv_agent_commit to a release tag to generate a release
# If tag finishes with the '-rcXX' string, you'll obtain a release candidate
# Set fusinv_agent_commit to a commit ref to generate a development release
# Use +r for commit ref and -r for tag & release
declare -r fusinv_agent_commit='2.3.19'
#declare +r fusinv_agent_commit='26ea32d6d0'
declare -r fusinv_agent_release='2.3.19'
declare -r fusinv_agent_mod_name='fusioninventory-agent'
declare -r fusinv_agent_repository='https://github.com/fusioninventory/fusioninventory-agent.git'

declare -r fusinv_agent_mod_specific_dependences=''
declare -r fusinv_agent_mod_dependences='Archive::Extract Compress::Zlib Data::Structure::Util Digest::SHA File::Copy::Recursive File::Which HTTP::Daemon inc::Module::Install IO::Socket::SSL JSON LWP::Protocol::https LWP::UserAgent Net::IP Net::NBName Net::Ping Net::SNMP Net::Pcap Net::Write::Layer2 Parallel::ForkManager Parse::EDID Text::Template Thread::Queue UNIVERSAL::require URI::Escape Win32::Daemon Win32::Job Win32::OLE Win32::TieRegistry Win32::Unicode::File XML::TreePP'
declare -r fusinv_agent_mod_uses='base Config constant Crypt::DES Cwd Data::Dumper Digest::MD5 Encode Encode::Byte Encode::CN Encode::JP Encode::KR Encode::TW Encode::Unicode English Fcntl File::Basename File::Find File::Glob File::Path File::Spec File::stat File::Temp Getopt::Long HTTP::Cookies HTTP::Headers HTTP::Request HTTP::Status integer IO::Handle JSON::PP lib List::Util LWP Memoize MIME::Base64 Net::Domain Net::hostent Net::HTTPS Net::SNMP::Security::USM Net::SNMP::Transport::IPv4::TCP Net::SNMP::Transport::IPv6::TCP Net::SNMP::Transport::IPv6::UDP Pod::Usage POSIX Scalar::Util Socket Storable strict Sys::Hostname Sys::Syslog Thread::Semaphore threads threads::shared Tie::Hash::NamedCapture Time::HiRes Time::Local Time::localtime URI User::pwent utf8 warnings Win32 Win32::API Win32::OLE::Const Win32::OLE::Variant'

declare -r fusinv_agent_mod_dependences_for_test='HTTP::Proxy HTTP::Server::Simple HTTP::Server::Simple::Authen IO::Capture::Stderr IPC::Run Test::Compile Test::Deep Test::Exception Test::MockModule Test::MockObject Test::More Test::NoWarnings'
declare -r fusinv_agent_mod_uses_for_test='Authen::Simple::Adapter CGI ExtUtils::Command::MM ExtUtils::Install ExtUtils::Packlist File::Copy Getopt::Std HTTP::Response TAP::Formatter::Console TAP::Formatter::Console::Session TAP::Parser TAP::Parser::Scheduler Test::Harness Test::MockObject::Extends UNIVERSAL'

# Try to fix too long commit ref
if [ -z "$( echo ${fusinv_agent_commit} | tr -d [0-9a-f] )" ]; then
   if [ -z "${fusinv_agent_commit}" ]; then
      fusinv_agent_commit="$fusinv_agent_release"
   elif (( ${#fusinv_agent_commit} > ${maximum_commit_length} )); then
      # Only try to fix commit ref if possible
      if ! typeset -p fusinv_agent_commit | grep -q 'declare -r'; then
         fusinv_agent_commit="${fusinv_agent_commit:0:${maximum_commit_length}}"
      else
         echo "WARNING ! You set a too big commit ref as read-only" >&2
      fi
   fi
   
   declare -r fusinv_agent_commit
fi
